<table class="content_tbl">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= cycle("", "even")%>">
    <td><%= role.name %></td>
    <td><%= link_to 'Show', role %> | <%= link_to 'Edit', edit_role_path(role) %> | <%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

