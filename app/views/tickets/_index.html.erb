<% if not @tickets.empty? %>

<table class="content_tbl">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @tickets.each do |ticket| %>
  <%
    klass = ""
    klass = ticket.priority.eql?("Critical") ? "critical" : ""
  %>
  <tr class="<%= cycle("", "even")%> <%= klass %>">
    <td><%= ticket.name %></td>
    <td><%= ticket.description %></td>
    <td><%= link_to 'Show', ticket %> | <%= link_to 'Edit', edit_ticket_path(ticket) %> | <%= link_to 'Destroy', ticket, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% else %>

<p>There are no tickets yet.</p>

<% end %>
